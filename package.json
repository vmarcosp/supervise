{
  "name": "supervise-crawler",
  "version": "0.0.0",
  "description": "Supervise crawler",
  "esy": {
    "build": "refmterr dune build -p supervise-crawler",
    "release": { "releasedBinaries": [ "app.exe" ] }
  },
  "buildDirs": {
    "test": {
      "require": [
        "base",
        "teste.lib",
        "rely.lib"
      ],
      "flags": [
        "-open",
        "Base",
        "-linkall",
        "-g",
        "-w",
        "-9"
      ],
      "includeSubdirs": "unqualified",
      "name": "teste.test",
      "namespace": "Teste_test"
    },
    "test_runner": {
      "require": [
        "teste.test"
      ],
      "bin": {
        "test-runner.exe": "test_runner_app.re"
      }
    }
  },
  "scripts": { 
    "start": "esy x app",
    "test": "esy x test-runner.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/alcotest": "0.8.5",
    "@opam/base": "v0.13.0",
    "@opam/cohttp": "*",
    "@opam/cohttp-lwt-unix": "*",
    "@opam/dune": ">=1.6.0",
    "@opam/lambdasoup": "*",
    "@opam/lwt": "*",
    "@opam/lwt_ppx": "~1.2.4",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/pastel": "^0.2.3",
    "@reason-native/rely": "^3.2.1",
    "ocaml": "~4.8.1000"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}
